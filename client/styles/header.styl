nav.navbar
  background-color header-back-color;

  .btn-inverse
    background-color lighten(header-back-color, 20%)
    border-color darken(header-back-color, 20%)

  .navbar-nav
    & > .active > a
      background-color darken(header-back-color, 20%)

    .button
      border 1px solid lighten(header-back-color, 20%)

  .navbar-form[role='search']

    .input-group.focused
      -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(red(accent-color), green(accent-color), blue(accent-color), 0.6)
      -moz-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(red(accent-color), green(accent-color), blue(accent-color), 0.6)
      box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(red(accent-color), green(accent-color), blue(accent-color), 0.6)


    input[type='text']
      background-color lighten(header-back-color, 10%)
      border-color darken(header-back-color, 40%)
      color header-front-color

      &:focus
        -webkit-box-shadow: none
        -moz-box-shadow: none
        box-shadow: none

    button
      z-index: 2
    @media screen-sm
      width: 300px;