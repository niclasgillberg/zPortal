nav.menu
  background-color header-back-color
  color header-front-color
  position absolute
  top 0
  left 0
  right 0
  height header-height
  padding 0 base-padding
  border-bottom: 1px solid darken(header-back-color, 90%)

  .branding
    line-height header-height
    font-size 30px

  a.branding
    text-decoration: none
    padding 0 base-padding 0 base-padding
    margin-left -(base-padding)
    display inline-block

    &:hover
      text-decoration: underline

  ul
    display inline-block

    li
      display inline-block

      a
        display inline-block
        padding 5px 15px
        text-decoration: none
        font-size 20px

        &:hover
          text-decoration: underline

  .right
    float right


  .user-info
    .name
      line-height header-height * (1 / 2)

      span
        line-height 1
        vertical-align bottom


    .bucket
      float right
      line-height header-height * (1 / 2)

      section
        display inline-block

        i, span
          vertical-align top
          line-height 1
          margin 0 1px

